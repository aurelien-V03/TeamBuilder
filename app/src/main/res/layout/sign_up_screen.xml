<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signUpScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/sign_up_inscription"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/case1"
        android:layout_width="352dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInscription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/case2"
        android:layout_width="352dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case1"
        android:backgroundTint="@color/black"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nom"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/case3"
        android:layout_width="352dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPrenom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Prenom"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/case4"
        android:layout_width="352dp"
        android:layout_height="66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case3"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Entrer votre mot de passe"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

    </com.google.android.material.textfield.TextInputLayout>" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/case5"
        android:layout_width="352dp"
        android:layout_height="66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case4"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirmation mot passe"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

    </com.google.android.material.textfield.TextInputLayout><![CDATA[" />







    ]]>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/sign_up_user_type"

        android:textColor="@color/black"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="@+id/userTypeSpinner"
        app:layout_constraintEnd_toStartOf="@+id/userTypeSpinner"
        app:layout_constraintTop_toTopOf="@+id/userTypeSpinner"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/userTypeSpinner"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:descendantFocusability="blocksDescendants"
        android:outlineAmbientShadowColor="@color/black"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/black"
        android:pointerIcon="text"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case5" />

    <Button
        android:id="@+id/buttonSignUpScreen"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/sign_up_inscription"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userTypeSpinner" />
</androidx.constraintlayout.widget.ConstraintLayout>